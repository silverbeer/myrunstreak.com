# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
Makefile text eol=lf

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML/JSON
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary

# Lock files (generated)
uv.lock linguist-generated=true
*.tfstate linguist-generated=true
